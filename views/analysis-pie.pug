extends layout

block stylesheets
  link(rel='stylesheet' href='/stylesheets/analysis-pie.css')

block content
  #container
    // 置頂列
    #header
      #menu_btn
        a(data-bs-toggle='offcanvas' href='#offcanvasExample' role='button' aria-controls='offcanvasExample')
          img(src='images/menu.svg' alt='')
      #title Punch in !
      #login_btn
        a(href='/user')
          if username 
            img(src=`images/${data.photo}.png` alt='')
          else
            img(src='images/user.svg' alt='')
    #offcanvasExample.offcanvas.offcanvas-start(tabindex='-1' aria-labelledby='offcanvasExampleLabel')
      #sideBar.list-group
        a#home.list-group-item.list-group-item-action(href='/index') Home
        a#today.list-group-item.list-group-item-action(href='/todayList') Today List
        //- a#group.list-group-item.list-group-item-action(href='/group') Group
        a#today.list-group-item.list-group-item-action(href='/habit') Habit
        a#today.list-group-item.list-group-item-action(href='/exercise') Exercise
        a#today.list-group-item.list-group-item-action(href='/study') Study
        a#analysis.list-group-item.list-group-item-action.active(href='/analysis') Analysis
        a#about.list-group-item.list-group-item-action(href='/about') About us
    // 內容
    if username
      #main
        h1 時間圓餅圖
        .row
          img#char-image(src="images/pie-chart-image.svg", alt="chart")
          h1 完成時間總時長
        //- .row
          //- img#char-image(src="images/bar-chart.svg", alt="chart") 
        #text
          #exercise_box.part_box.row
              h3#title_exerciseTime.col-6 運動目標完成時間
              p#time_exercise.time_item.col-6 
          #study_box.part_box.row
              h3#title_studyTime.col-6 學習目標完成時間
              p#time_study.time_item.col-6  
    else
      #guest
        .row
          h3 目前無法進行時間分析
            br
            | 登入後以進行數據分析
        .row
          p 還沒有帳號嗎？
            a.link_css(href='/sign-up') 註冊帳號
        .row
          p 已經有帳號了！
            a.link_css(href='/login') 立即登入

block javascripts
    script(src='/javascripts/analysis-pie.js')